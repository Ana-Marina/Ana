<project>

	<target name="clean">
		<delete dir="build"/>
		<delete file="mapreduce.jar"/>
	</target>
	
	<target name="compile">
		<mkdir dir="build"/>
		<javac source="1.6" target="1.6" srcdir="src" destdir="build"/>
	</target>
	
	<target name="jar">
		<jar destfile="mapreduce.jar" basedir="build">
			<manifest>
				<attribute name="Main-Class" value="Main"/>
			</manifest>
		</jar>
	</target>

	<target name="run">
		<java jar="mapreduce.jar" fork="true"/>
	</target>
</project>
